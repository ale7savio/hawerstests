package com.shopify.pruebas.clients;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestHeader;

@FeignClient(name="connect-shopify", url = "https://hawkers-back-dev.myshopify.com")
public interface ConnectShopifyFeignClient {
	
	
	//    PlacementUseCase findUseCaseByName(@RequestHeader(value = "Authorization", required = true) String authorizationHeader, @PathVariable("name") String name);

	@GetMapping("/admin/api/2020-01/shop.json")
	public String getOrders(@RequestHeader(value = "Authorization", required = true) String authorizationHeader);
}
